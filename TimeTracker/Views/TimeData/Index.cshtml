@{
    ViewBag.Title = "Time";
}

<h2>Time</h2>

<style scoped>
    p {
        color: black;
    }

    .paragraph1 {
        font-size: 25px;
    }

    .button-large {
        font-size: 210%;
    }
    .btn {
  background: #4daceb;
  background-image: -webkit-linear-gradient(top, #4daceb, #2980b9);
  background-image: -moz-linear-gradient(top, #4daceb, #2980b9);
  background-image: -ms-linear-gradient(top, #4daceb, #2980b9);
  background-image: -o-linear-gradient(top, #4daceb, #2980b9);
  background-image: linear-gradient(to bottom, #4daceb, #2980b9);
  -webkit-border-radius: 28;
  -moz-border-radius: 28;
  border-radius: 28px;
  font-family: Arial;
  color: #ffffff;
  font-size: 21px;
  padding: 10px 20px 10px 20px;
  text-decoration: none;
}

.btn:hover {
  background: #3cb0fd;
  background-image: -webkit-linear-gradient(top, #3cb0fd, #3498db);
  background-image: -moz-linear-gradient(top, #3cb0fd, #3498db);
  background-image: -ms-linear-gradient(top, #3cb0fd, #3498db);
  background-image: -o-linear-gradient(top, #3cb0fd, #3498db);
  background-image: linear-gradient(to bottom, #3cb0fd, #3498db);
  text-decoration: none;
}
</style>

@if (User.Identity.IsAuthenticated)
{
    <p class="paragraph1">Hello @User.Identity.Name, these are your hours worked this week.</p>
    
}
else
{
    <p class="paragraph1">Please Login to continue with this page...</p>
    <button class="btn">Register</button>
    <button class="btn">Login</button>
}